extends pug/layouts

block link
  -var selected = 'Devices';

include pug/partials/breadcrumb/devices

block content
  .row
    .col-lg-12
      .panel.panel-default
        .panel-heading Thêm thiết bị
        .panel-body
          form(role='form')
            #inputs
              .form-group
                label(for='name') Tên thiết bị
                input#name.form-control(type='text', placeholder='Tên thiết bị')
              .form-group
                label(for='endpoint') Chọn endpoint:
                select#endpoint.form-control
                  option 1
                  option 2
                  option 3
                  option 4

              .form-group
                label(for='description') Mô tả
                textarea#description.form-control(rows='3', placeholder="Mô tả thiết bị")
              .form-group
                label(for='unit') Unit
                input#unit.form-control(type='text', placeholder='Unit')
              .form-group
                label(for='min') Min
                input#unit.form-control(type='text', placeholder='Giới hạn min')
              .form-group
                label(for='max') Max
                input#unit.form-control(type='text', placeholder='Giới hạn max')

            // /#input
            #actions
              input#submit.btn.btn-primary(type='submit', value='Cập Nhật')
          // ./form
    // /.col
  // /.row


block scripts