extends pug/layouts.pug

block link
  -var selected = 'Endpoint';

block content
  .row
    .col-lg-12
      .panel.panel-default
        .panel-heading Chỉnh sửa thiết bị
        .panel-body
          form(role='form')
            #inputs
              .form-group
                label(for='name') Tên thiết bị
                input#name.form-control(type='text', placeholder='Tên thiết bị', value="Nhiệt kế")
              .form-group
                label(for='description') Mô tả
                textarea#description.form-control(rows='3', placeholder="Mô tả thiết bị") Lorem ipsum dolor sit amet, consectetur adipisicing elit. Pariatur ratione, voluptatum distinctio. Nulla magnam, repudiandae et sed saepe optio minus!
              .form-group
                label(for='address') Max
                input#address.form-control(type='text', placeholder='Giới hạn max', value="192.168.1.2")

            // /#input
            #actions
              input#submit.btn.btn-primary(type='submit', value='Cập Nhật')
          // ./form
    // /.col
  // /.row


