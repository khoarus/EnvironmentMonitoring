extends pug/layouts

block link
  -var selected = 'Dashboard';

block content
    .row
      .col-lg-12
        ul.nav.nav-tabs
            
    .row
        .col-lg-12
          .panel.panel-default
            .panel-heading Device 1
            .panel-body
              .canvas-wrapper
                canvas#myChart.myChart(height='200', width='600')
    .row
        .col-lg-12
          .panel.panel-default
            .panel-heading Device 2
            .panel-body
              .canvas-wrapper
                canvas#myChart2.myChart(height='200', width='600')

    block scripts
      script(src='../public/javascript/ajax/menuDashboard.js')
      script.
        // myChart 1
          var ctx = document.getElementById("myChart");
          var data = [65, 59, 80, 95, 56, 55, 40, 67, 45, 12, 44, -20]
          var HighlightRange = {
                begin: 80,
                end: 10,
          }

          var myChart = new Chart(ctx, {
            type: 'line',
            data: {
              labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
              datasets: [{
                  fill: false,
                  lineTension: 0.1,
                  backgroundColor: "rgba(178,0,0,0.4)",
                  borderColor: "rgba(178,0,0,1)",
                  borderCapStyle: 'butt',
                  borderDash: [],
                  borderDashOffset: 0.0,
                  borderJoinStyle: 'miter',
                  pointBorderColor: "rgba(178,0,0,1)",
                  pointBackgroundColor: "#fff",
                  pointBorderWidth: 1,
                  pointHoverRadius: 5,
                  pointHoverBackgroundColor: "rgba(178,0,0,1)",
                  pointHoverBorderColor: "rgba(220,220,220,1)",
                  pointHoverBorderWidth: 2,
                  pointRadius: 1,
                  pointHitRadius: 10,
                  label: "Nhiệt độ",
                  data: data,
                  spanGaps: false,
              }],
              // This, if it exists at all, defines the highlight region.
              yHighlightRange : HighlightRange
            },
            options: {
              scales: {
                yAxes: [{
                  ticks: {
                    beginAtZero:false
                  },
                  scaleLabel: {
                    display: true,
                    labelString: '*c'
                  }
                }]
              }
            }
          });
        // myChart 2
          var ctx = document.getElementById("myChart2");
          var data = [20, 25, 8, 15, 26, 25, 32, 17, 10, 12, 30, 20]
          var HighlightRange = {
                begin: 30,
                end: 10,
          }

          var myChart = new Chart(ctx, {
            type: 'line',
            data: {
              labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'],
              datasets: [{
                  fill: false,
                  lineTension: 0.1,
                  backgroundColor: "rgba(75,192,192,0.4)",
                  borderColor: "rgba(75,192,192,1)",
                  borderCapStyle: 'butt',
                  borderDash: [],
                  borderDashOffset: 0.0,
                  borderJoinStyle: 'miter',
                  pointBorderColor: "rgba(75,192,192,1)",
                  pointBackgroundColor: "#fff",
                  pointBorderWidth: 1,
                  pointHoverRadius: 5,
                  pointHoverBackgroundColor: "rgba(75,192,192,1)",
                  pointHoverBorderColor: "rgba(220,220,220,1)",
                  pointHoverBorderWidth: 2,
                  pointRadius: 1,
                  pointHitRadius: 10,
                  label: "Áp Suất",
                  data: data,
                  spanGaps: false,
              }],
              // This, if it exists at all, defines the highlight region.
              yHighlightRange : HighlightRange
            },
            options: {
              scales: {
                yAxes: [{
                  ticks: {
                    beginAtZero:false
                  }
                }]
              }
            }
          });