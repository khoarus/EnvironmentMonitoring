mixin breadcrumb(breadcrumbs)
  ol.breadcrumb
    li
      a(href='/', title="Quay lại trang chủ")
          i.fa.fa-home(aria-hidden='true')
    each val, key in breadcrumbs
      li
        a(href=val, title=key)=key
    li.active #{title}